# ============================================
# Railway MySQL 연결 (Railway에서 자동 주입)
# ============================================
DATABASE_URL=mysql://user:password@host:port/database

# ============================================
# JWT 설정
# ============================================
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long_string
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# 서버 설정
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# CORS 설정
# ============================================
FRONTEND_URL=http://localhost:5500

# ============================================
# 로그 설정
# ============================================
LOG_LEVEL=info
